{
  "name": "openhab1-rest",
  "version": "1.0.0",
  "description": "node module that talks to the openhab1 rest interface",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "eventsource": "1.0.1",
