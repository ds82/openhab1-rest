    "socket.io-client": "2.0.1"
  },
  "devDependencies": {
    "@types/node": "7.0.18",
    "jest": "20.0.3",
    "ts-jest": "20.0.4",
    "ts-node": "3.0.4",
    "tslint": "5.2.0",
    "typescript": "2.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
